<?xml version="1.0" encoding="UTF-8"?>

<style-scheme id="basic" _name="Basic" version="1.0">
	<author>John Marion</author>
	<_description>Basic</_description>

<!-- COLORS -->
	<color name="text_bg" value="#000"/>
	<color name="text_fg" value="#fff"/>
	<color name="cursor_color" value="#888"/>
	<color name="line_highlight" value="#111"/>
	
	<color name="string_color" value="#0f0"/>
	<color name="char_color" value="#0f0"/>
	<color name="spchar_color" value="#cc0"/>
	<color name="number_color" value="#cc0"/>
	<color name="dec_color" value="#cc0"/>
	<color name="float_color" value="#cc0"/>
	<color name="complex_color" value="#cc0"/>
	<color name="base_color" value="#cc0"/>
	<color name="boolean_color" value="#cc0"/>
	
	<color name="builtin_color" value="#80f"/>
	<color name="keyword_color" value="#44c"/>
	<color name="func_color" value="#80f"/>
	<color name="type_color" value="#80f"/>
	<color name="pre_color" value="#44c"/>
	<color name="id_color" value="#cc0"/>
	<color name="op_color" value="#fff"/>
	<color name="statement_color" value="#fff"/>
	<color name="const_color" value="#80f"/>
	<color name="spconst_color" value="#80f"/>
	
	<color name="comment_color" value="#ff0"/>
	<color name="error_color" value="#f00"/>

<!-- Global Settings -->
	<style name="text" foreground="text_fg" background="text_bg" bold="true"/>
	<style name="cursor" foreground="cursor_color"/>
	<style name="current-line" background="line_highlight"/>
	<style name="line-numbers" foreground="text_bg" background="text_fg"/>
	<style name="selection" foreground="text_bg" background="text_fg" bold="true"/>

<!-- Bracket Matching -->
	<style name="bracket-match" foreground="error_color" background="text_bg" bold="true"/>
	<style name="bracket-mismatch" foreground="error_color" bold="true" italic="true" underline="true"/>
	<style name="search-match" foreground="comment_color" background="text_fg" italic="true"/>
	
	<style name="def:string" foreground="string_color" bold="true"/>
	<style name="def:attrib-value" foreground="string_color" italic="true"/>
	<style name="def:character" foreground="char_color" bold="true"/>
	<style name="def:special-char" foreground="spchar_color" bold="true"/>
	<style name="def:number" foreground="number_color" bold="true"/>
	<style name="def:decimal" foreground="dec_color" bold="true"/>
	<style name="def:floating-point" foreground="float_color" bold="false"/>
	<style name="def:complex" foreground="complex_color" bold="true"/>
	<style name="def:base-n-integer" foreground="base_color" bold="true"/>
	<style name="def:boolean" foreground="boolean_color" bold="true" scale="x-large"/>

	<style name="def:builtin" foreground="builtin_color" bold="true" italic="true"/>
	<style name="def:keyword" foreground="keyword_color" bold="true" italic="true"/>
	<style name="def:function" foreground="func_color" bold="true" italic="true"/>
	<style name="def:type" foreground="type_color" bold="true" italic="true"/>
	<style name="def:preprocessor" foreground="pre_color" underline="true"/>
	<style name="def:identifier" foreground="id_color"/>
	<style name="def:operator" foreground="op_color"/>
	<style name="def:statement" foreground="statement_color" bold="true" italic="true"/>

	<style name="def:constant" foreground="const_color" bold="true"/>
	<style name="def:special-constant" foreground="spconst_color" bold="true"/>
	<style name="def:error" foreground="error_color" background="text_fg" bold="true" italic="true" underline="true"/>
	<style name="def:comment" foreground="comment_color" italic="true"/>
	
	<style name="html:attrib-value" foreground="string_color" italic="true"/>
	
</style-scheme>
